<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="adcptMDspecRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="ADCPT_M_DSPEC_RECOVERED" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/adcpt_m/adcpt_m_dspec_recovered_driver.py" />
    </bean>

    <camelContext id="adcpt-m-dspec-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="adcptMDspecRecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/adcpt_m_dspec/recovered?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="adcptMDspecRecoveredFileConsumerRoute">
            <from ref="adcptMDspecRecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-ADCPTM001</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.adcptMDspecRecovered" />
        </route>
        
        <route id="adcptMDspecRecoveredIngest">
            <from uri="jms-durable:queue:Ingest.adcptMDspecRecovered" />
            <doTry>
                <pipeline>
                    <bean ref="adcptMDspecRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.adcptMDspecRecovered?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>