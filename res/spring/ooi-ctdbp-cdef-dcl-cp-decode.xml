<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="ctdbp_cdef_dcl_cp_RecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="ctdbp_cdef_dcl_cp_recovered" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/ctdbp_cdef/dcl_cp/ctdbp_cdef_dcl_cp_recovered_driver.py" />
    </bean>

    <bean id="ctdbp_cdef_dcl_cp_TelemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="ctdbp_cdef_dcl_cp_telemetered" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/ctdbp_cdef/dcl_cp/ctdbp_cdef_dcl_cp_telemetered_driver.py" />
    </bean>

    <camelContext id="ctdbp_cdef_dcl_cp-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="ctdbp_cdef_dcl_cp_RecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/ctdbp_cdef_dcl_cp_recov?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <endpoint id="ctdbp_cdef_dcl_cp_TelemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/ctdbp_cdef_dcl_cp_telem?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="ctdbp_cdef_dcl_cp_RecoveredFileConsumerRoute">
            <from ref="ctdbp_cdef_dcl_cp_RecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CTDBPP000</constant>
            </setHeader>            
            <to uri="jms-durable:queue:Ingest.ctdbp_cdef_dcl_cp_recovered" />
        </route>

        <route id="ctdbp_cdef_dcl_cp_TelemeteredFileConsumerRoute">
            <from ref="ctdbp_cdef_dcl_cp_TelemeteredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-CTDBPP000</constant>
            </setHeader>            
            <to uri="jms-durable:queue:Ingest.ctdbp_cdef_dcl_cp_telemetered" />
        </route>

        <route id="ctdbp_cdef_dcl_cp_RecoveredIngest">
            <from uri="jms-durable:queue:Ingest.ctdbp_cdef_dcl_cp_recovered" />
            <doTry>
                <pipeline>
                    <bean ref="ctdbp_cdef_dcl_cp_RecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdbp_cdef_dcl_cp?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

        <route id="ctdbp_cdef_dcl_cp_TelemeteredIngest">
            <from uri="jms-durable:queue:Ingest.ctdbp_cdef_dcl_cp_telemetered" />
            <doTry>
                <pipeline>
                    <bean ref="ctdbp_cdef_dcl_cp_TelemeteredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.ctdbp_cdef_dcl_cp?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>