<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="dostaAbcdjmSioRecoveredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="dosta_abcdjm_sio_recovered" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/dosta_abcdjm/sio/dosta_abcdjm_sio_recovered_driver.py" />
    </bean>

    <bean id="dostaAbcdjmSioTelemeteredProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="dosta_abcdjm_sio_telemetered" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/dosta_abcdjm/sio/dosta_abcdjm_sio_telemetered_driver.py" />
    </bean>

    <camelContext id="dosta-abcdjm-sio-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="dostaAbcdjmSioRecoveredFileEndpoint"
            uri="file:${edex.home}/data/ooi/dosta_abcdjm_sio_recov?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <endpoint id="dostaAbcdjmSioTelemeteredFileEndpoint"
            uri="file:${edex.home}/data/ooi/dosta_abcdjm_sio_telem?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="dostaAbcdjmSioRecoveredFileConsumerRoute">
            <from ref="dostaAbcdjmSioRecoveredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-DSTASR000</constant>
            </setHeader>            
            <to uri="jms-durable:queue:Ingest.dostaAbcdjmSioRecovered" />
        </route>

        <route id="dostaAbcdjmSioTelemeteredFileConsumerRoute">
            <from ref="dostaAbcdjmSioTelemeteredFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>telemetered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-DSTAST000</constant>
            </setHeader>            
            <to uri="jms-durable:queue:Ingest.dostaAbcdjmSioTelemetered" />
        </route>

        <route id="dostaAbcdjmSioRecoveredIngest">
            <from uri="jms-durable:queue:Ingest.dostaAbcdjmSioRecovered" />
            <doTry>
                <pipeline>
                    <bean ref="dostaAbcdjmSioRecoveredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.dostaAbcdjmSio?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

        <route id="dostaAbcdjmSioTelemeteredIngest">
            <from uri="jms-durable:queue:Ingest.dostaAbcdjmSioTelemetered" />
            <doTry>
                <pipeline>
                    <bean ref="dostaAbcdjmSioTelemeteredProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.dostaAbcdjmSio?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>