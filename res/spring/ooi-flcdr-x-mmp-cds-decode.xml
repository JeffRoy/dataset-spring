<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- FLCDR_X_MMP_CDS processing configuration -->
    <bean id="flcdrXMmpCdsProcessor" class="com.raytheon.uf.edex.ooi.decoder.dataset.FileDecoder">
        <constructor-arg name="name" value="FLCDR_X_MMP_CDS" />
        <constructor-arg name="basePythonCodePath" value="#{basePythonCodeLocalizationPath}" />
        <constructor-arg name="scriptPath" value="#{basePythonCodeLocalizationPath}/mi/dataset/driver/flntu_x/mmp_cds/flcdr_x_mmp_cds_recovered_driver.py" />
    </bean>

	<!-- FLCDR_X_MMP_CDS camel configuration -->
    <camelContext id="flcdr-x-mmp-cds-decode-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="flcdrXMmpCdsFileEndpoint"
            uri="file:${edex.home}/data/ooi/flcdr_x_mmp_cds?delete=true&amp;delay=5000&amp;maxMessagesPerPoll=1000&amp;exclusiveReadLockStrategy=#fileChangedStrategy" />

        <route id="flcdrXMmpCdsFileConsumerRoute">
            <from ref="flcdrXMmpCdsFileEndpoint" />
            <bean ref="fileToString" />
            <setHeader headerName="deliveryType">
                <constant>recovered</constant>
            </setHeader>
            <setHeader headerName="sensor">
                <constant>XX00XXXX-XX00X-00-FLCDRX000</constant>
            </setHeader>  
            <to uri="jms-durable:queue:Ingest.flcdrXMmpCds" />
        </route>

        <route id="flcdrXMmpCdsIngest">
            <from uri="jms-durable:queue:Ingest.flcdrXMmpCds" />
            <doTry>
                <pipeline>
                    <bean ref="flcdrXMmpCdsProcessor" />
                    <to uri="direct-vm:persistIndexAlert" />
                </pipeline>
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:ooi.flcdrXMmpCds?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>